<!-- Navigation bar -->
<div class="topnav" id="myTopnav">

  <!-- Home page image link -->
  <a href="/">
      <img class="logo" src="imgs/banner.svg">
  </a>

  <!-- Logout logic if signed in -->
  <% if (user) { %>
    <form action="/register/logout" method="POST">
      <a href="/" class="browser-nav">Log out</a>
    </form>
  <% } else { %>
  <a href="login"  class="browser-nav" >Log In</a>
  <a href="signup"  class="browser-nav" >Sign Up</a>
  <% } %>

  <!-- About link -->
  <a href="about"  class="browser-nav" >About</a>
  
  <!-- Favorites logic if signed in -->
  <% if (user) { %>
  <a href="favorites"  class="browser-nav" ><i class="fa fa-star-o" aria-hidden="true"></i></a>
  <a href="javascript:void(0);" class="icon" onclick="myFunction()"><i class="fa fa-bars  fa-sm"  fa-sm></i>
  </a>
  <% } else { %>
  <a href="javascript:void(0);" class="icon" onclick="myFunction()"><i class="fa fa-bars  fa-sm"  fa-sm></i>
  </a>
  <% } %>
</div>

<!-- Mobile device integration -->
  <script>
  function myFunction() {

    let x = document.getElementById("myTopnav");
    let closedIcon = document.getElementsByClassName("icon");

    if (x.className === "topnav") {
      x.className += " responsive";
      document.getElementsByClassName("icon")[0].innerHTML = "<i class=\"fa fa-times\"></i>";
    } else {
      x.className = "topnav";
      document.getElementsByClassName("icon")[0].innerHTML = "<i class=\"fa fa-bars  fa-sm\"  fa-sm></i>";
    }
  }
  </script>
